generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// userテーブル作成：メールアドレス、FirebaseUIDなど
model User {
  id String @id 
  name String
  email String @unique
  password String

  photos Photo[]

  @@map("users")
}

// Photoテーブル作成：画像URL、キャプション、作成者（Userと紐づけ）など(1User:nPost)
model Photo {
  id Int @id @default(autoincrement())
  userId String @map("user_id")
  caption String @db.Text
  imageUrl String @default("") @db.Text
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("posts")
}
