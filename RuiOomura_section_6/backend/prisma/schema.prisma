generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// userテーブル作成：メールアドレス、FirebaseUIDなど
model User {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  
  posts Post[]

  @@map("users")
}

// Postテーブル作成：画像URL、キャプション、作成者（Userと紐づけ）など(1User:nPost)
model Post {
  id Int @id @default(autoincrement())
  userId int @map("user_id")
  body String @db.Text
  user @relation(fields: [userId], reference: [id], onDelete: Cascade)

  @@index([userId])
  @@map("posts")

}
