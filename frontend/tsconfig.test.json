{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["dom", "dom.iterable", "es6", "es2015", "es2017"],
    "target": "es6"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/types/jest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "src/types/cypress.d.ts",
    "src/**/*.cy.ts",
    "src/**/*.cy.tsx",
    "**/cypress/**/*"
  ]
}
